---
// src/pages/404.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Side ikke fundet | Enogtyve">
	<div class="container">
		<div class="error-content">
			<div class="error-code">404</div>
			<h1>Siden blev ikke fundet</h1>
			<p class="error-message">
				Den side du leder efter eksisterer ikke, eller er blevet flyttet.
			</p>
			
			<div class="bitcoin-quote">
				<svg class="bitcoin-icon" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
					<path d="M11.767 19.089c4.924.868 6.14-6.025 1.216-6.894m-1.216 6.894L5.86 18.047m5.908 1.042-.347 1.97m1.563-8.864c4.924.869 6.14-6.025 1.215-6.893m-1.215 6.893-3.94-.694m5.155-6.2L8.29 4.26m5.908 1.042.348-1.97M7.48 20.364l3.126-17.727"/>
				</svg>
				<blockquote>
					"I don't believe we shall ever have a good money again before we take the thing out of the hands of government."
					<cite>— F.A. Hayek</cite>
				</blockquote>
			</div>

			<div class="actions">
				<a href="/" class="btn btn-primary">Gå til forsiden</a>
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	.error-content {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-md);
		text-align: center;
	}

	.error-code {
		font-size: clamp(6rem, 15vw, 12rem);
		font-weight: 900;
		line-height: 1;
		color: var(--primary);
		margin-bottom: var(--space-md);
		background: linear-gradient(135deg, var(--primary), #ffa500);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	h1 {
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: var(--space-sm);
		color: var(--text);
	}

	.error-message {
		font-size: 1.2rem;
		color: var(--text-light);
		margin-bottom: var(--space-lg);
	}

	.bitcoin-quote {
		background: var(--background-card);
		border: 1px solid var(--border);
		border-left: 4px solid var(--primary);
		border-radius: 8px;
		padding: var(--space-lg);
		margin: var(--space-lg) 0;
		display: flex;
		gap: var(--space-md);
		align-items: flex-start;
		text-align: left;
	}

	.bitcoin-icon {
		flex-shrink: 0;
		color: var(--primary);
		margin-top: 0.25rem;
	}

	blockquote {
		margin: 0;
		font-style: italic;
		color: var(--text-light);
		line-height: 1.6;
	}

	cite {
		display: block;
		margin-top: var(--space-sm);
		font-style: normal;
		color: var(--primary);
		font-weight: 600;
	}

	.actions {
		display: flex;
		justify-content: center;
		margin-top: var(--space-lg);
	}

	.btn {
		display: inline-block;
		padding: 0.875rem 1.75rem;
		border-radius: 8px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 1rem;
	}

	.btn-primary {
		background: var(--primary);
		color: #000;
		border: 2px solid var(--primary);
	}

	.btn-primary:hover {
		background: transparent;
		color: var(--primary);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(247, 147, 26, 0.3);
	}

	@media (max-width: 768px) {
		.error-content {
			padding: var(--space-lg) var(--space-sm);
		}

		.btn {
			width: 100%;
		}

		.bitcoin-quote {
			flex-direction: column;
			text-align: center;
		}
	}
</style>