<style>
	.coming-soon {
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	.content {
		text-align: center;
		max-width: 600px;
	}

	h1 {
		font-size: clamp(1.75rem, 4vw, 2.5rem);
		color: var(--primary);
		margin-bottom: 1.5rem;
	}

	p {
		font-size: 1.1rem;
		color: var(--text-light);
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.btn-primary {
		display: inline-block;
		margin-top: 1.5rem;
		padding: 0.85rem 1.85rem;
		background: var(--primary);
		color: #000;
		border-radius: 8px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(247, 147, 26, 0.4);
	}
</style>