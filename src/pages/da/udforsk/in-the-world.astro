<style>
    .content-section {
        margin-bottom: 2.5rem;
        line-height: 1.8;
        color: var(--text-light, #ccc);
    }

    .content-section p {
        margin-bottom: 0.75rem;
    }

    /* Category sections */
    .category-section {
        margin-bottom: 2rem;
    }

    .category-section h2 {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(247, 147, 26, 0.2);
    }

    /* Links grid */
    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 0.75rem;
    }

    .link-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.15rem;
        border: 1px solid rgba(247, 147, 26, 0.12);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.03);
        transition:
            border-color 0.3s ease,
            transform 0.2s ease;
    }

    .link-card:hover {
        border-color: rgba(247, 147, 26, 0.4);
        transform: translateY(-2px);
    }

    .link-content {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
        flex: 1;
    }

    .link-name {
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--text-light, #ccc);
    }

    .link-desc {
        font-size: 0.8rem;
        line-height: 1.5;
        color: rgba(204, 204, 204, 0.5);
    }

    .link-arrow {
        color: var(--primary);
        font-size: 0.95rem;
        opacity: 0.4;
        flex-shrink: 0;
        transition: opacity 0.2s ease;
    }

    .link-card:hover .link-arrow {
        opacity: 1;
    }

    /* Featured card */
    .featured-card {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        padding: 1.15rem 1.25rem;
        border: 1px solid rgba(247, 147, 26, 0.12);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.03);
        transition:
            border-color 0.3s ease,
            transform 0.2s ease;
    }

    .featured-card:hover {
        border-color: rgba(247, 147, 26, 0.4);
        transform: translateY(-2px);
    }

    .featured-image {
        width: 180px;
        height: auto;
        border-radius: 6px;
        flex-shrink: 0;
    }

    /* Back to top */
    .back-to-top {
        display: block;
        width: fit-content;
        margin: 3rem auto 0 auto;
        font-size: 0.9rem;
        font-weight: 500;
        color: rgba(247, 147, 26, 0.9);
        transition: opacity 0.3s ease;
    }

    .back-to-top:hover {
        opacity: 0.7;
    }

    @media (max-width: 567px) {
        .links-grid {
            grid-template-columns: 1fr;
        }

        .featured-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .featured-image {
            width: 100%;
            max-width: 220px;
        }
    }
</style>
