    line-height: 1.8;
    color: var(--text-light, #ccc);
  }

  .content-section p {
    margin-bottom: 0.75rem;
  }

  /* Links grid */
  .links-grid {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    margin-bottom: 2rem;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.25rem 1.5rem;
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.03);
    transition:
      border-color 0.3s ease,
      transform 0.2s ease;
    position: relative;
  }

  .link-card:hover {
    border-color: rgba(247, 147, 26, 0.4);
    transform: translateY(-2px);
  }

  .link-card.upcoming {
    border-style: dashed;
    opacity: 0.65;
    pointer-events: none;
  }

  .link-icon {
    font-size: 1.6rem;
    flex-shrink: 0;
    width: 2.5rem;
    text-align: center;
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .link-name {
    font-weight: 700;
    font-size: 1rem;
    color: var(--text-light, #ccc);
  }

  .link-desc {
    font-size: 0.85rem;
    line-height: 1.6;
    color: rgba(204, 204, 204, 0.6);
  }

  .link-arrow {
    font-size: 1.1rem;
    color: var(--primary);
    opacity: 0.5;
    flex-shrink: 0;
    transition: opacity 0.2s ease;
  }

  .link-card:hover .link-arrow {
    opacity: 1;
  }

  .upcoming-badge {
    font-size: 0.72rem;
    font-weight: 600;
    color: var(--primary);
    border: 1px solid rgba(247, 147, 26, 0.3);
    border-radius: 4px;
    padding: 0.2rem 0.5rem;
    flex-shrink: 0;
    white-space: nowrap;
  }

  @media (max-width: 567px) {
    .link-card {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1rem 1.15rem;
    }

    .link-icon {
      width: auto;
    }

    .link-arrow {
      position: absolute;
      top: 1rem;
      right: 1rem;
    }

    .upcoming-badge {
