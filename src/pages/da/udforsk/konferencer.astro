<style>
  .content-section {
    margin-bottom: 2.5rem;
    line-height: 1.8;
    color: var(--text-light, #ccc);
  }

  .content-section p {
    margin-bottom: 0.75rem;
  }

  /* Conferences */
  .conferences-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .conference-card {
    display: flex;
    gap: 2rem;
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-radius: 12px;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    transition: border-color 0.3s ease;
  }

  .conference-card:hover {
    border-color: rgba(247, 147, 26, 0.3);
  }

  .conference-image-link {
    flex-shrink: 0;
    width: 220px;
    display: flex;
    align-items: flex-start;
  }

  .conference-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: opacity 0.2s ease;
  }

  .conference-image-link:hover .conference-image {
    opacity: 0.85;
  }

  .conference-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .conference-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-light, #ccc);
    margin: 0;
    border-bottom: none;
    padding-bottom: 0;
  }

  .conference-meta {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  .conference-date,
  .conference-location {
    font-size: 0.82rem;
    color: rgba(204, 204, 204, 0.6);
    font-weight: 600;
  }

  .conference-desc {
    font-size: 0.88rem;
    line-height: 1.7;
    color: rgba(204, 204, 204, 0.7);
    margin: 0.25rem 0 0 0;
    flex-grow: 1;
  }

  .conference-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .conference-cta {
    display: inline-block;
    padding: 0.45rem 1.1rem;
    background: rgba(247, 147, 26, 0.12);
    color: var(--primary);
    font-size: 0.88rem;
    font-weight: 700;
    border-radius: 6px;
    transition: background 0.2s ease;
  }

  .conference-cta:hover {
    background: rgba(247, 147, 26, 0.22);
  }

  .conference-discount {
    font-size: 0.82rem;
    color: var(--primary);
    font-weight: 600;
    margin: 0.25rem 0 0 0;
    padding: 0.4rem 0.75rem;
    background: rgba(247, 147, 26, 0.06);
    border-radius: 6px;
    width: fit-content;
  }

  /* Category section */
  .category-section {
    margin-bottom: 2rem;
  }

  .category-section h2 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(247, 147, 26, 0.2);
  }

  .mention-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.15rem;
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.03);
    transition: border-color 0.3s ease, transform 0.2s ease;
  }

  .mention-card:hover {
    border-color: rgba(247, 147, 26, 0.4);
    transform: translateY(-2px);
  }

  .mention-content {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    flex: 1;
  }

  .mention-name {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--text-light, #ccc);
  }

  .mention-desc {
    font-size: 0.82rem;
    line-height: 1.5;
    color: rgba(204, 204, 204, 0.55);
  }

  .mention-arrow {
    color: var(--primary);
    font-size: 0.95rem;
    opacity: 0.4;
    flex-shrink: 0;
    transition: opacity 0.2s ease;
  }

  .mention-card:hover .mention-arrow {
