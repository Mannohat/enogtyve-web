<ResourcePageLayout
  title="Bitcoin-ressourcer"
  description="En samling af de bedste Bitcoin-ressourcer på nettet til videre læring."
  lang="da"
>
  <section class="content-section">
    <p>
      En kurateret samling af Bitcoin-only-ressourcer. Her
      finder du alt fra det originale whitepaper og podcasts til
      data-dashboards, værktøjer og film. Listen opdateres løbende.
    </p>
  </section>

  {
    categories.map((cat) => (
      <section class="category-section">
        <h2>
          <img src={cat.icon} alt="" class="cat-icon" /> {cat.title}
        </h2>
        <div class="links-grid">
          {cat.items.map((item) => (
            <a
              href={item.url}
              target="_blank"
              rel="noopener noreferrer"
              class="link-card"
            >
              <div class="link-logo-wrap">
                {item.logo ? (
                  <img src={item.logo} alt="" class="link-logo" />
                ) : (
                  <img
                    src="/images/icons/arrowright.png"
                    alt=""
                    class="link-logo"
                  />
                )}
              </div>
              <div class="link-content">
                <span class="link-name">{item.name}</span>
                {item.desc && <span class="link-desc">{item.desc}</span>}
              </div>
              <span class="link-arrow">→</span>
            </a>
          ))}
        </div>
      </section>
    ))
  }

  <section class="content-section">
    <p class="highlight">
      Se også: <a
        href="https://bitcoin-resources.com/"
        target="_blank"
        rel="noopener noreferrer"><strong>Bitcoin-resources.com</strong></a
      > – en omfattende samling af Bitcoin-ressourcer.
    </p>
  </section>

  <a href="#" class="back-to-top"> ↑ Tilbage til toppen </a>
</ResourcePageLayout>

<style>
  .content-section {
    margin-bottom: 2.5rem;
    line-height: 1.8;
    color: var(--text-light, #ccc);
  }

  .content-section p {
    margin-bottom: 0.75rem;
  }

  .highlight {
    padding: 0.75rem 1rem;
    background: rgba(247, 147, 26, 0.06);
    border-left: 3px solid var(--primary);
    border-radius: 0 8px 8px 0;
  }

  /* Category sections */
  .category-section {
    margin-bottom: 2.5rem;
  }

  .category-section h2 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(247, 147, 26, 0.2);
  }

  .cat-icon {
    height: 3rem;
    width: 3rem;
    object-fit: contain;
    vertical-align: middle;
    margin-right: 0.35rem;
  }

  /* Link cards */
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.75rem;
  }

  .link-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.75rem;
    padding: 0.85rem 1rem;
    min-height: 68px;
    border: 1px solid rgba(247, 147, 26, 0.15);
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.07);
    transition:
      border-color 0.3s ease,
      transform 0.2s ease,
      background 0.3s ease;
    position: relative;
  }

  .link-card:hover {
    border-color: rgba(247, 147, 26, 0.45);
    transform: translateY(-2px);
    background: rgba(247, 147, 26, 0.06);
  }

  .link-logo-wrap {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .link-logo {
    height: 40px;
    width: 40px;
    object-fit: contain;
    border-radius: 4px;
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    flex: 1;
    min-width: 0;
  }

  .link-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: #fff;
  }

  .link-desc {
    font-size: 0.8rem;
    line-height: 1.4;
    color: rgba(204, 204, 204, 0.6);
  }

  .link-arrow {
    color: var(--primary);
    font-size: 0.9rem;
    opacity: 0.3;
    flex-shrink: 0;
    transition: opacity 0.2s ease;
  }

  .link-card:hover .link-arrow {
    opacity: 1;
  }

  @media (max-width: 567px) {
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
