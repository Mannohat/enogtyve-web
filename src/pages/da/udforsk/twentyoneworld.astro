  }

  .cta-card:hover {
    border-color: rgba(247, 147, 26, 0.5);
    transform: translateY(-2px);
  }

  .cta-icon {
    font-size: 1.8rem;
    flex-shrink: 0;
  }

  .cta-content {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    flex: 1;
  }

  .cta-name {
    font-weight: 700;
    font-size: 1.05rem;
    color: var(--text-light, #ccc);
  }

  .cta-desc {
    font-size: 0.85rem;
    color: rgba(204, 204, 204, 0.6);
  }

  .cta-arrow {
    font-size: 1.2rem;
    color: var(--primary);
    opacity: 0.5;
    flex-shrink: 0;
    transition: opacity 0.2s ease;
  }

  .cta-card:hover .cta-arrow {
    opacity: 1;
  }

  /* Back to top */
  .back-to-top {
    display: block;
    width: fit-content;
    margin: 3rem auto 0 auto;
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(247, 147, 26, 0.9);
    transition: opacity 0.3s ease;
  }

  .back-to-top:hover {
    opacity: 0.7;
  }

  @media (max-width: 567px) {
    .cta-card {
      flex-direction: column;
      text-align: center;
    }

    .cta-arrow {
      display: none;
    }
  }
</style>