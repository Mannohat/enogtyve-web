<style>
  .hero-image {
    margin-bottom: 2rem;
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-radius: 12px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .content-section {
    margin-bottom: 2.5rem;
    line-height: 1.8;
    color: var(--text-light, #ccc);
  }

  .content-section p {
    margin-bottom: 0.75rem;
  }

  /* CTA */
  .cta-section {
    margin-bottom: 2rem;
  }

  .cta-card {
    display: flex;
