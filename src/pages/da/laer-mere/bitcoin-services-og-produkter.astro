        gap: 0.5rem;
    }

    .category-icon {
        font-size: 1.1rem;
    }

    /* Links grid */
    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 0.75rem;
    }

    .link-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.15rem;
        border: 1px solid rgba(247, 147, 26, 0.12);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.03);
        text-decoration: none;
        transition:
            border-color 0.3s ease,
