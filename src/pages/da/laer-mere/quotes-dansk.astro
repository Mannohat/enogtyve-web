---
import ResourcePageLayout from "../../../layouts/ResourcePageLayout.astro";

const mantras = [
  "Bitcoin er nørdernes guld.",
  "Vi tror og stoler på Bitcoin.",
  "Vær din egen bank.",
  "HODL.",
  "Ikke dine nøgler, ikke dine bitcoin.",
  "Der er 100.000.000 sats i en bitcoin.",
  "Bitcoin blev forudsagt af Henry Ford, Friedrich Hayek og Milton Friedman.",
  "Undersøg det selv.",
  "Tænk selv.",
  "Lad ikke andre tænke for dig.",
  "Opsøg altid sandheden, altid.",
  "Bitcoin har ret.",
  "Cypherpunks skriver kode.",
];

const livsvisdom = [
  "Elsk dig selv og elsk andre.",
  "Vær retfærdig, vær fair og vær venlig.",
  "Hvis du er bange for noget, undersøg det.",
  "Alle har et sultent hjerte.",
  "Alle mennesker ønsker de samme grundlæggende ting af de samme grunde.",
  "Uanset hvor meget du har, vil du være lige så glad.",
  "At have mere vil ikke gøre dig lykkelig.",
  "Praktiser medfølelse – sæt dig selv i andres sko.",
  "Praktiser opmærksomhed – føl uden dom.",
  "Oplev med nysgerrighed.",
  "Praktiser taknemmelighed – find altid ting at være taknemmelig for.",
  "Handlinger taler højere end ord.",
  "Hvad du gør, bestemmer hvem du er.",
  "Du har ret til ejendom.",
  "Din krop er din ejendom.",
  "Du er den eneste, der bestemmer over dig selv.",
  "Dit liv er dit og kun dit. Kun du kan leve dit liv.",
];

const quotes = [
  { text: "Hvis du ikke tror på mig eller ikke forstår det, har jeg ikke tid til at prøve at overbevise dig, undskyld.", author: "Satoshi Nakamoto" },
  { text: "Varmen fra din computer er ikke spildt, hvis du har brug for at opvarme dit hjem.", author: "Satoshi Nakamoto" },
  { text: "Hvad synes alle om ₿-symbolet med de to linjer gennem ydersiden?", author: "Satoshi Nakamoto" },
  { text: "Det legitimationsbevis, der etablerer nogen som ægte, er evnen til at levere CPU-kraft.", author: "Satoshi Nakamoto" },
  { text: "For bedst mulig privatliv er det foretrukket kun at bruge Bitcoin-adresser én gang.", author: "Satoshi Nakamoto" },
  { text: "Jeg er sikker på, at om 20 år vil der enten være meget stor transaktionsvolumen eller ingen volumen.", author: "Satoshi Nakamoto" },
  { text: "Mistede mønter gør kun alle andres mønter lidt mere værd. Tænk på det som en donation til alle.", author: "Satoshi Nakamoto" },
  { text: "Stay humble, stack sats.", author: "Matt Odell" },
  { text: "Bitcoin er et underligt spil, hvor den eneste vindende bevægelse er at spille.", author: "Bitstein" },
  { text: "Hvis privatliv er forbudt, vil kun lovbrydere have privatliv.", author: "Phil Zimmermann" },
];
---

<ResourcePageLayout
  title="Quotes oversat til dansk"
  description="De bedste Bitcoin-citater oversat til dansk — til inspiration og orange-pilling."
  lang="da"
>
  <section class="category-section">
    <h2>₿ Bitcoin-mantraer</h2>
    <div class="mantras-grid">
      {mantras.map((m) => (
        <div class="mantra-card">
          <p>{m}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="category-section">
    <h2>Livsvisdom</h2>
    <div class="mantras-grid">
      {livsvisdom.map((m) => (
        <div class="mantra-card wisdom">
          <p>{m}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="category-section">
    <h2>Citater</h2>
    <div class="quotes-list">
      {quotes.map((q) => (
        <blockquote class="quote-card">
          <p class="quote-text">"{q.text}"</p>
          <footer class="quote-author">— {q.author}</footer>
        </blockquote>
      ))}
    </div>
  </section>

  <a href="#" class="back-to-top"> ↑ Tilbage til toppen </a>
</ResourcePageLayout>

<style>
  /* Category sections */
  .category-section {
    margin-bottom: 3rem;
  }

  .category-section h2 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(247, 147, 26, 0.2);
  }

  /* Mantra cards */
  .mantras-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 0.75rem;
  }

  .mantra-card {
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-radius: 10px;
    padding: 1rem 1.15rem;
    background: rgba(255, 255, 255, 0.03);
    transition: border-color 0.3s ease, transform 0.2s ease;
  }

  .mantra-card:hover {
    border-color: rgba(247, 147, 26, 0.4);
    transform: translateY(-2px);
  }

  .mantra-card p {
    margin: 0;
    font-size: 0.93rem;
    line-height: 1.6;
    color: var(--text-light, #ccc);
    font-weight: 500;
  }

  .mantra-card.wisdom {
    border-color: rgba(247, 147, 26, 0.08);
  }

  .mantra-card.wisdom p {
    font-weight: 400;
  }

  /* Quote cards */
  .quotes-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .quote-card {
    margin: 0;
    padding: 1.25rem 1.5rem;
    border: 1px solid rgba(247, 147, 26, 0.12);
    border-left: 3px solid var(--primary);
    border-radius: 0 10px 10px 0;
    background: rgba(255, 255, 255, 0.03);
    transition: border-color 0.3s ease;
  }

  .quote-card:hover {
    border-color: rgba(247, 147, 26, 0.35);
    border-left-color: var(--primary);
  }

  .quote-text {
    margin: 0 0 0.6rem 0;
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--text-light, #ccc);
    font-style: italic;
  }

  .quote-author {
    font-size: 0.82rem;
    color: var(--primary);
    font-weight: 600;
    font-style: normal;
  }

  @media (max-width: 567px) {
    .mantras-grid {
      grid-template-columns: 1fr;
    }
  }
</style>