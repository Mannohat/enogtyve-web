<style>
  /* Navigation buttons */
  .nav-buttons {
    display: flex;
    gap: var(--space-md, 1rem);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .nav-btn {
    flex: 1;
    min-width: 150px;
    text-align: center;
    padding: 0.75rem 1.5rem;
    background-color: var(--primary);
    color: #000;
    font-weight: 700;
    font-size: 0.9rem;
    border-radius: 6px;
    border: 1px solid var(--primary);
    transition: all 0.3s ease;
  }

  .nav-btn:hover {
    background-color: transparent;
    color: var(--primary);
  }

  /* Content sections */
  .content-section {
    margin-bottom: 2.5rem;
    line-height: 1.8;
    color: var(--text-light, #ccc);
  }

  .content-section h2 {
    color: var(--primary);
    font-size: 1.4rem;
    margin-bottom: var(--space-md, 1rem);
    padding-bottom: var(--space-sm, 0.5rem);
    border-bottom: 1px solid rgba(247, 147, 26, 0.2);
  }

  .content-section p {
    margin-bottom: 1rem;
  }

  /* Feature block */
  .feature-block {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    align-items: center;
    margin-top: 1rem;
  }

  .feature-image {
    text-align: center;
  }

  .feature-image img {
    max-width: 100%;
    border-radius: 8px;
  }

  /* Callout */
  .callout {
    padding: 1.25rem 1.5rem;
    background: rgba(247, 147, 26, 0.06);
    border-left: 3px solid rgba(247, 147, 26, 0.5);
    border-radius: 0 8px 8px 0;
    margin-top: 1rem;
  }

  .callout p {
    margin-bottom: 0;
  }

  /* Category sections */
  .category-section {
    margin-bottom: 2.5rem;
  }

  .category-section h2 {
    color: var(--primary);
    font-size: 1.4rem;
    margin-bottom: var(--space-md, 1rem);
    padding-bottom: var(--space-sm, 0.5rem);
    border-bottom: 1px solid rgba(247, 147, 26, 0.2);
  }

  /* Links grid */
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-md, 1rem);
  }

  .link-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(247, 147, 26, 0.15);
    transition: all 0.3s ease;
  }

  .link-card:hover {
    background: rgba(247, 147, 26, 0.08);
    border-color: var(--primary);
    transform: translateY(-3px);
  }

  .link-card-title {
    color: var(--text-light, #ccc);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .link-card-arrow {
    color: var(--primary);
    font-size: 1.1rem;
    margin-left: 0.75rem;
    flex-shrink: 0;
  }

  /* Back to top */
  .back-to-top {
    display: block;
    width: fit-content;
    margin: 3rem auto 0 auto;
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(247, 147, 26, 0.9);
    transition: opacity 0.3s ease;
  }

  .back-to-top:hover {
    opacity: 0.7;
  }

  @media (max-width: 567px) {
    .nav-buttons {
      flex-direction: column;
    }

    .feature-block {
      grid-template-columns: 1fr;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>