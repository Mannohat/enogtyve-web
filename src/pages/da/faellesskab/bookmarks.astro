<style>
    .intro {
        margin-bottom: 2rem;
        line-height: 1.7;
        color: var(--text-light);
    }

    .category-section {
        margin-bottom: 2rem;
    }

    .category-section h2 {
        color: var(--primary);
        font-size: 1.4rem;
        margin-bottom: var(--space-md);
        padding-bottom: var(--space-sm);
        border-bottom: 1px solid rgba(247, 147, 26, 0.2);
    }

    .nostr-section h2 {
        color: #7b42d1;
        border-bottom-color: rgba(55, 26, 118, 0.3);
    }

    .resources-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: var(--space-md);
    }

    .resource-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 2rem 1.5rem;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(247, 147, 26, 0.15);
        transition: all 0.3s ease;
    }

    .resource-card:hover {
        background: rgba(247, 147, 26, 0.08);
        border-color: var(--primary);
        transform: translateY(-3px);
    }

    .nostr-card {
        border-color: rgba(55, 26, 118, 0.25);
    }

    .nostr-card:hover {
        background: rgba(55, 26, 118, 0.1);
        border-color: #7b42d1;
    }

    .resource-logo {
        max-height: 50px;
        max-width: 80%;
        object-fit: contain;
    }

    .resource-name {
        color: var(--text-light);
        font-size: 0.9rem;
        font-weight: 500;
        opacity: 0.8;
        text-align: center;
    }

    .resource-card > .resource-name:first-child {
        font-size: 0.95rem;
        font-weight: 600;
        opacity: 1;
    }

    .back-to-top {
        display: block;
        width: fit-content;
        margin: 3rem auto 0 auto;
        font-size: 0.9rem;
        font-weight: 500;
        color: rgba(247, 147, 26, 0.9);
        transition: opacity 0.3s ease;
    }

    .back-to-top:hover {
        opacity: 0.7;
    }

    @media (max-width: 567px) {
        .resources-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
