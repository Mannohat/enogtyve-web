<script>
  document.addEventListener('DOMContentLoaded', () => {
    const input = document.getElementById('glossary-search') as HTMLInputElement;
    const container = document.getElementById('glossary-container')!;
    const noResults = document.getElementById('no-results')!;
    const resultCount = document.getElementById('result-count')!;

    const allGroups = container.querySelectorAll<HTMLElement>('.letter-group');
    const allCards = container.querySelectorAll<HTMLElement>('.term-card');

    input.addEventListener('input', () => {
      const q = input.value.toLowerCase().trim();

      if (!q) {
        allGroups.forEach(g => g.style.display = '');
        allCards.forEach(c => c.style.display = '');
        noResults.style.display = 'none';
        resultCount.textContent = '';
        return;
      }

      let visibleCount = 0;

      allCards.forEach(card => {
        const name = card.querySelector('.term-name')?.textContent?.toLowerCase() || '';
        const eng = card.querySelector('.term-english')?.textContent?.toLowerCase() || '';
        const desc = card.querySelector('.term-body p')?.textContent?.toLowerCase() || '';
        const match = name.includes(q) || eng.includes(q) || desc.includes(q);
        card.style.display = match ? '' : 'none';
        if (match) visibleCount++;
      });

      allGroups.forEach(group => {
        const cardsInGroup = group.querySelectorAll<HTMLElement>('.term-card');
        const anyVisible = Array.from(cardsInGroup).some(c => c.style.display !== 'none');
        group.style.display = anyVisible ? '' : 'none';
      });

      noResults.style.display = visibleCount === 0 ? '' : 'none';
      resultCount.textContent = visibleCount > 0 ? `${visibleCount} resultat${visibleCount !== 1 ? 'er' : ''}` : '';
    });
  });
</script>

