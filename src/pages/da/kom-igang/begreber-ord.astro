// Fetch terms from the GitHub repo at build time
let termsData: { Term: string; English: string; Description: string; Links: { Title: string; Href: string }[] }[] = [];

try {
  const response = await fetch('https://raw.githubusercontent.com/Enogtyve/Ordliste/main/terms.json');
  termsData = await response.json();
} catch (e) {
  console.error('Failed to fetch terms.json:', e);
}

// Sort alphabetically by Danish term
const sorted = termsData.sort((a, b) => a.Term.localeCompare(b.Term, 'da'));

// Group by first letter
const grouped: Record<string, typeof termsData> = {};
for (const term of sorted) {
  const firstChar = term.Term.charAt(0).toUpperCase();
  const key = /\d/.test(firstChar) ? '#' : firstChar;
  if (!grouped[key]) grouped[key] = [];
  grouped[key].push(term);
}

const letters = Object.keys(grouped).sort((a, b) => {
  if (a === '#') return -1;
  if (b === '#') return 1;
  return a.localeCompare(b, 'da');
});
