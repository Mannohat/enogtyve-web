    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .info-list li {
    padding: 1rem 1.25rem;
    margin-bottom: 0.75rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(247, 147, 26, 0.1);
    border-radius: 8px;
    line-height: 1.7;
  }

