---
const { lang } = Astro.props;

const logos = [
	{
		href: "https://mempool.space/da",
		logo: "/images/logos/mempool.png",
		alt: "Mempool.space - Bitcoin block explorer",
	},
	{
		href: "https://timechaincalendar.com",
		logo: "/images/logos/timechaincal.png",
		alt: "Timechain Calendar - Bitcoin halving kalender",
	},
	{
		href: "https://bitcoin.clarkmoody.com/dashboard/",
		logo: "/images/logos/clarkmoody.png",
		alt: "Clark Moody Bitcoin Dashboard",
	},
	{
		href: "https://amboss.space",
		logo: "/images/logos/amboss.png",
		alt: "Amboss - Lightning Network explorer",
	},
	{
		href: "https://nakamotoinstitute.org",
		logo: "/images/logos/nakamotoinstitute.png",
		alt: "Nakamoto Institute - Bitcoin litteratur og ressourcer",
	},
	{
		href: "https://bitbo.io",
		logo: "/images/logos/bitbo.png",
		alt: "Bitbo - Bitcoin dashboard",
	},
];

const actions = [
	{
		icon: "/images/icons/bookmark.png",
		label: "Bogmærker",
		href: `/${lang}/faellesskab/bookmarks`,
	},
	{
		icon: "/images/icons/podcasts.png",
		label: "Podcasts",
		href: `/${lang}/podcasts`,
	},
	{ icon: "/images/icons/promo.png", label: "Rabat", href: `/${lang}/rabat` },
	{
		icon: "/images/icons/blockchain.png",
		label: "Blokkæden",
		href: `/${lang}/laer-mere/bitcoin-blockchain`,
	},
];
---

<section class="quick-actions">
	<div class="container">
		<div class="logo-cards">
			{
				logos.map((item) => (
					<a
						href={item.href}
						class="logo-card"
						target="_blank"
						rel="noopener noreferrer"
					>
						<img src={item.logo} alt={item.alt} class="logo-img" />
					</a>
				))
			}
		</div>

		<div class="action-cards">
			{
				actions.map((action) =>
					action.external ? (
						<a
							href={action.href}
							class="action-card"
							target="_blank"
							rel="noopener noreferrer"
						>
							{action.icon.startsWith("/") ? (
								<img
									src={action.icon}
									alt={action.label}
									class="card-icon-img"
								/>
							) : (
								<span class="card-icon">{action.icon}</span>
							)}
							<span class="card-label">{action.label}</span>
						</a>
					) : (
						<a href={action.href} class="action-card">
							{action.icon.startsWith("/") ? (
								<img
									src={action.icon}
									alt={action.label}
									class="card-icon-img"
								/>
							) : (
								<span class="card-icon">{action.icon}</span>
							)}
							<span class="card-label">{action.label}</span>
						</a>
					),
				)
			}
		</div>

		<div class="event-banner">
			<a
				href="https://www.bitcoincopenhagen.dk"
				class="event-main"
				target="_blank"
				rel="noopener noreferrer"
			>
				<img
					src="/images/logos/btccph.png"
					alt="Bitcoin Copenhagen"
					class="event-logo"
				/>
				<div class="event-info">
					<span class="event-name">Bitcoin Copenhagen Konference</span
					>
					<span class="event-date">21. marts 2026</span>
				</div>
			</a>
			<a href={`/${lang}/udforsk/konferencer`} class="event-more">
				Se flere konferencer →
			</a>
		</div>
	</div>
</section>

<style>
	.quick-actions {
		padding: 1.5rem 0 1rem;
		border-bottom: 1px solid rgba(247, 147, 26, 0.1);
	}

	.logo-cards {
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.logo-card {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 1rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(247, 147, 26, 0.15);
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.logo-card:hover {
		background: rgba(247, 147, 26, 0.08);
		border-color: var(--primary);
		transform: translateY(-3px);
	}

	.logo-img {
		max-height: 28px;
		max-width: 100%;
		object-fit: contain;
	}

	.action-cards {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.action-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 0.75rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(247, 147, 26, 0.15);
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.action-card:hover {
		background: rgba(247, 147, 26, 0.08);
		border-color: var(--primary);
		transform: translateY(-3px);
	}

	.card-icon {
		font-size: 1.75rem;
		line-height: 1;
	}

	.card-icon-img {
		height: 3.5rem;
		width: 3.5rem;
		object-fit: contain;
	}

	.card-label {
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--text);
	}

	/* Event banner */
	.event-banner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0.75rem 1rem;
		background: rgba(247, 147, 26, 0.05);
		border-radius: 8px;
		border: 1px solid rgba(247, 147, 26, 0.15);
	}

	.event-main {
		display: flex;
		align-items: center;
		gap: 0.85rem;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	.event-main:hover {
		opacity: 0.85;
	}

	.event-logo {
		height: 2.5rem;
		width: auto;
		object-fit: contain;
		flex-shrink: 0;
	}

	.event-info {
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.event-name {
		font-size: 0.9rem;
		font-weight: 700;
		color: #fff;
	}

	.event-date {
		font-size: 0.8rem;
		font-weight: 600;
		color: var(--primary);
		background: rgba(247, 147, 26, 0.1);
		padding: 0.15rem 0.55rem;
		border-radius: 4px;
	}

	.event-more {
		font-size: 0.8rem;
		font-weight: 500;
		color: rgba(204, 204, 204, 0.6);
		text-decoration: none;
		transition: color 0.2s ease;
		flex-shrink: 0;
	}

	.event-more:hover {
		color: var(--primary);
	}

	@media (max-width: 768px) {
		.logo-cards {
			grid-template-columns: repeat(3, 1fr);
		}

		.action-cards {
			grid-template-columns: repeat(2, 1fr);
		}

		.event-banner {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.6rem;
		}

		.event-info {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.25rem;
		}
	}
</style>
