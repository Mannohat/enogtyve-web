---
const { lang } = Astro.props;

const logos = [
	{ href: "https://mempool.space/da", logo: "/images/logos/mempool.png" },
	{
		href: "https://timechaincalendar.com",
		logo: "/images/logos/timechaincal.png",
	},
	{ href: "https://bitcoin.clarkmoody.com/dashboard/", logo: "/images/logos/clarkmoody.png" },
	{ href: "https://amboss.space", logo: "/images/logos/amboss.png" },
	{
		href: "https://nakamotoinstitute.org",
		logo: "/images/logos/nakamotoinstitute.png",
	},
	{ href: "https://bitbo.io", logo: "/images/logos/bitbo.png" },
];

const actions = [
	{ icon: "/images/icons/bookmark.png", label: "Bogm√¶rker", href: `/${lang}/faellesskab/bookmarks` },
	{ icon: "/images/icons/podcasts.png", label: "Podcasts", href: `/${lang}/podcasts` },
	{ icon: "/images/icons/discount.png", label: "Rabat", href: `/${lang}/rabat` },
	{ icon: "/images/icons/blockchain.png", label: "Blokk√¶den", href: `/${lang}/laer-mere/bitcoin-blockchain` },
];
---

<section class="quick-actions">
	<div class="container">
		<div class="logo-cards">
			{
				logos.map((item) => (
					<a
						href={item.href}
						class="logo-card"
						target="_blank"
						rel="noopener noreferrer"
					>
						<img src={item.logo} alt="" class="logo-img" />
					</a>
				))
			}
		</div>

		<div class="action-cards">
			{
				actions.map((action) =>
					action.external ? (
						<a
							href={action.href}
							class="action-card"
							target="_blank"
							rel="noopener noreferrer"
						>
							{action.icon.startsWith("/") ? (
								<img src={action.icon} alt={action.label} class="card-icon-img" />
							) : (
								<span class="card-icon">{action.icon}</span>
							)}
							<span class="card-label">{action.label}</span>
						</a>
					) : (
						<a href={action.href} class="action-card">
							{action.icon.startsWith("/") ? (
								<img src={action.icon} alt={action.label} class="card-icon-img" />
							) : (
								<span class="card-icon">{action.icon}</span>
							)}
							<span class="card-label">{action.label}</span>
						</a>
					),
				)
			}
		</div>

		<div class="news-ticker">
			<span class="ticker-icon">üß°</span>
			<span class="ticker-label">HUSK:</span>
			<div class="ticker-content">
				<a
					href="https://www.bitcoincopenhagen.dk"
					class="ticker-item ticker-link"
					target="_blank"
					rel="noopener noreferrer"
					>Bitcoin Copenhagen Konference d. 21. marts 2026</a
				>
				<span class="ticker-separator">|</span>
				<a href={`/${lang}/udforsk/konferencer`} class="ticker-item ticker-link"
					>Klik her for at se anbefalede konferencer</a
				>
				<span class="ticker-separator">|</span>
				<a href={`/${lang}/blog`} class="ticker-item ticker-link"
					>ENOGTYVE Blog</a
				>
			</div>
		</div>
	</div>
</section>

<style>
	.quick-actions {
		padding: 1.5rem 0 1rem;
		border-bottom: 1px solid rgba(247, 147, 26, 0.1);
	}

	.logo-cards {
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.logo-card {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 1rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(247, 147, 26, 0.15);
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.logo-card:hover {
		background: rgba(247, 147, 26, 0.08);
		border-color: var(--primary);
		transform: translateY(-3px);
	}

	.logo-img {
		max-height: 28px;
		max-width: 100%;
		object-fit: contain;
	}

	.action-cards {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.action-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 0.75rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(247, 147, 26, 0.15);
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.action-card:hover {
		background: rgba(247, 147, 26, 0.08);
		border-color: var(--primary);
		transform: translateY(-3px);
	}

	.card-icon {
		font-size: 1.75rem;
		line-height: 1;
	}

	.card-icon-img {
		height: 3.5rem;
		width: 3.5rem;
		object-fit: contain;
	}

	.card-label {
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--text);
	}

	.news-ticker {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1rem;
		background: rgba(247, 147, 26, 0.05);
		border-radius: 8px;
		border: 1px solid rgba(247, 147, 26, 0.1);
		overflow: hidden;
	}

	.ticker-icon {
		font-size: 1.1rem;
		flex-shrink: 0;
	}

	.ticker-label {
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--primary);
		flex-shrink: 0;
	}

	.ticker-content {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		overflow: hidden;
		white-space: nowrap;
	}

	.ticker-item {
		font-size: 0.85rem;
		color: var(--text-light);
		flex-shrink: 0;
	}

	.ticker-link {
		text-decoration: none;
		color: var(--text-light);
		transition: color 0.2s ease;
	}

	.ticker-link:hover {
		color: #f7931a;
		text-decoration: none;
	}

	.ticker-separator {
		color: var(--primary);
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		.logo-cards {
			grid-template-columns: repeat(3, 1fr);
		}

		.action-cards {
			grid-template-columns: repeat(2, 1fr);
		}

		.news-ticker {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.ticker-content {
			flex-direction: column;
			align-items: flex-start;
			white-space: normal;
		}

		.ticker-separator {
			display: none;
		}
	}
</style>