---
interface Props {
    lang: string;
}
const { lang } = Astro.props;
---

<section class="intro-banner">
    <div class="container">
        <div class="banner-content">
            <div class="text-column">
                <h1 class="banner-title">VELKOMMEN TIL ENOGTYVE</h1>
                <p class="banner-text">
                    For nysgerrige med interesse for Bitcoin. No financial advice!<br>Alle
                    er velkomne til at bidrage, dele viden og lære. Velkommen til. <br><strong>ENOGTYVE er Bitcoin only!</strong>
                </p>
            </div>
            <div class="actions-column">
                <div class="button-group">
                    <a href={`/${lang}/blog/penges-historie`} class="action-btn"
                        >Hvad er penge?</a
                    >
                    <a href={`/${lang}/blog/hvad-er-bitcoin`} class="action-btn"
                        >Hvad er Bitcoin?</a
                    >
                </div>
                <div class="search-wrapper">
                    <input
                        type="search"
                        placeholder="Søg efter indhold..."
                        id="search-input"
                        autocomplete="off"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .intro-banner {
        padding: 1.5rem 0;
        background: linear-gradient(
            135deg,
            rgba(247, 147, 26, 0.04) 0%,
            rgba(247, 147, 26, 0.01) 100%
        );
        border-bottom: 1px solid rgba(247, 147, 26, 0.15);
        position: relative;
        overflow: visible;
        z-index: 50;
    }

    .intro-banner::before {
        content: "";
        position: absolute;
        top: 0;
        left: -10%;
        width: 120%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(247, 147, 26, 0.3),
            transparent
        );
    }

    .banner-content {
        display: flex;
        justify-content: space-between;
        align-items: stretch;
        gap: 3rem;
    }

    .text-column {
        flex: 1;
        max-width: 50%;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        border: 1px solid rgba(247, 147, 26, 0.15);
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.02);
    }

    .actions-column {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        max-width: 50%;
        position: relative;
        z-index: 100;
        padding: 1rem;
        border: 1px solid rgba(247, 147, 26, 0.15);
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.02);
    }

    .banner-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--primary);
        margin: 0;
        letter-spacing: -0.01em;
        line-height: 1.1;
    }

    .banner-text {
        font-size: 0.9rem;
        line-height: 1.5;
        color: var(--text-light);
        margin: 0;
        font-weight: 400;
    }

    .banner-text strong {
        color: var(--primary);
        font-weight: 700;
    }

    .button-group {
        display: flex;
        gap: 0.75rem;
    }

    .action-btn {
        flex: 1;
        padding: 0.65rem 1.25rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        background: rgba(247, 147, 26, 0.1);
        color: var(--text);
        border-color: rgba(247, 147, 26, 0.3);
    }

    .action-btn:hover {
        background: rgba(247, 147, 26, 0.2);
        border-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(247, 147, 26, 0.2);
    }

    .search-wrapper {
        position: relative;
        width: 100%;
    }

    .search-wrapper input {
        width: 100%;
        padding: 0.65rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(247, 147, 26, 0.2);
        border-radius: 6px;
        color: var(--text);
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .search-wrapper input:focus {
        outline: none;
        border-color: var(--primary);
        background: rgba(255, 255, 255, 0.08);
    }

    .search-wrapper input::placeholder {
        color: var(--text-light);
    }

    @media (max-width: 968px) {
        .banner-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.25rem;
        }

        .text-column {
            max-width: 100%;
        }

        .actions-column {
            width: 100%;
            max-width: 100%;
        }

        .button-group {
            flex-direction: column;
        }
    }

    @media (max-width: 768px) {
        .intro-banner {
            padding: 1.25rem 0;
        }

        .text-column {
            gap: 0.4rem;
        }

        .banner-title {
            font-size: 1.35rem;
        }

        .banner-text {
            font-size: 0.85rem;
            line-height: 1.5;
        }

        .action-btn {
            font-size: 0.8rem;
            padding: 0.6rem 1rem;
        }

        .search-wrapper input {
            font-size: 0.85rem;
        }
    }
</style>