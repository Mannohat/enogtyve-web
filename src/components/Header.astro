        background: #1a1a1a;
        opacity: 0;
        transform: translateY(-10px);
        transition:
            opacity 0.2s ease,
            transform 0.2s ease;
    }

    /* Add a pseudo-element to create a seamless hover bridge */
    .has-submenu::before {
        content: "";
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        height: 0.5rem;
        background: transparent;
        display: none;
    }

