        display: block;
        width: 28px;
        height: 2px;
        background: #fff;
        position: absolute;
        transition: transform 0.3s ease;
    }

    .hamburger::before {
        top: -8px;
    }

    .hamburger::after {
        bottom: -8px;
    }

    .mobile-menu-toggle[aria-expanded="true"] .hamburger {
        background: transparent;
    }

