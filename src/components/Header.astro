        { label: "Virksomhed", href: `/${lang}/advisory-services/business` },
    ],
};

// Helper function to check if a path is active
function isActive(href: string, currentPath: string): boolean {
    if (href === `/${lang}` || href === `/${lang}/`) {
        return currentPath === `/${lang}` || currentPath === `/${lang}/`;
    }
    return currentPath.startsWith(href);
}

// Helper function to get language-switched path
function getSwitchedPath(targetLang: string): string {
    const pathWithoutLang = currentPath.replace(/^\/(da|en)/, "");
    return `/${targetLang}${pathWithoutLang || ""}`;
}
---

<header>
    <div class="header-top">
        <div class="container">
            <a href={`/${lang}`} class="logo" aria-label="Home">
                <img src="/images/logos/enogtyve_logo.png" alt="Enogtyve" />
            </a>

            <div class="header-right">
                <div class="language-switcher">
                    <a
                        href={getSwitchedPath("da")}
                        class={lang === "da" ? "active" : ""}
                        aria-label="Switch to Danish"
                        aria-current={lang === "da" ? "true" : undefined}
                    >
                        DA
                    </a>
                    <span>/</span>
                    <a
                        href={getSwitchedPath("en")}
                        class={lang === "en" ? "active" : ""}
                        aria-label="Switch to English"
                        aria-current={lang === "en" ? "true" : undefined}
                    >
                        EN
                    </a>
                </div>

                <button
                    class="mobile-menu-toggle"
                    aria-label="Toggle mobile menu"
                    aria-expanded="false"
                    aria-controls="main-navigation"
                >
                    <span class="hamburger"></span>
                </button>
            </div>
        </div>
    </div>

    <nav class="nav-bar" id="main-navigation" aria-label="Main navigation">
        <div class="container nav-container">
            <ul class="nav-links" role="menubar">
                {
                    menuItems.map((item, index) => (
                        <li
                            class={item.submenu.length > 0 ? "has-submenu" : ""}
                            role="none"
                        >
                            {item.submenu.length > 0 ? (
                                <button
                                    class={`nav-button ${isActive(item.href, currentPath) ? "active" : ""}`}
                                    role="menuitem"
                                    aria-haspopup="true"
                                    aria-expanded="false"
                                    aria-label={`${item.label} category`}
                                >
                                    {item.label}
                                </button>
                            ) : (
                                <a
                                    href={item.href}
                                    class={
                                        isActive(item.href, currentPath)
                                            ? "active"
                                            : ""
                                    }
                                    role="menuitem"
                                >
                                    {item.label}
                                </a>
                            )}
                            {item.submenu.length > 0 && (
                                <ul
                                    class="submenu"
                                    role="menu"
                                    aria-label={`${item.label} submenu`}
                                >
                                    {item.submenu.map((subItem) => (
                                        <li role="none">
                                            <a
                                                href={subItem.href}
                                                class={
                                                    isActive(
                                                        subItem.href,
                                                        currentPath,
                                                    )
                                                        ? "active"
                                                        : ""
                                                }
                                                target={subItem.target}
                                                rel={
                                                    subItem.target === "_blank"
                                                        ? "noopener noreferrer"
                                                        : undefined
                                                }
                                                role="menuitem"
                                            >
                                                {subItem.label}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </li>
                    ))
                }
            </ul>

            <ul class="nav-links exclusive-nav" role="menubar">
                <li class="exclusive has-submenu" role="none">
                    <button
                        class={`nav-button ${isActive(exclusiveMenuItem.href, currentPath) ? "active" : ""}`}
                        role="menuitem"
                        aria-haspopup="true"
                        aria-expanded="false"
                        aria-label={`${exclusiveMenuItem.label} category`}
                    >
                        {exclusiveMenuItem.label}
                    </button>
                    <ul
                        class="submenu"
                        role="menu"
                        aria-label={`${exclusiveMenuItem.label} submenu`}
                    >
