<script>
    // Mobile menu toggle
    const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
    const navBar = document.querySelector(".nav-bar");
    const body = document.body;

    if (mobileMenuToggle && navBar) {
        mobileMenuToggle.addEventListener("click", () => {
            const isOpen =
                mobileMenuToggle.getAttribute("aria-expanded") === "true";
            mobileMenuToggle.setAttribute(
                "aria-expanded",
                (!isOpen).toString(),
            );
            navBar.classList.toggle("is-open");
            body.style.overflow = !isOpen ? "hidden" : "";
        });

        // Close menu when clicking outside
        document.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;
            if (
                navBar.classList.contains("is-open") &&
                !navBar.contains(target) &&
                !mobileMenuToggle.contains(target)
            ) {
                mobileMenuToggle.setAttribute("aria-expanded", "false");
                navBar.classList.remove("is-open");
                body.style.overflow = "";
            }
        });

        // Close menu on escape key
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && navBar.classList.contains("is-open")) {
                mobileMenuToggle.setAttribute("aria-expanded", "false");
                navBar.classList.remove("is-open");
                body.style.overflow = "";
                mobileMenuToggle.focus();
            }
        });
    }

    // Handle menu buttons (non-navigational categories)
    const menuButtons = document.querySelectorAll(
        '.nav-button[aria-haspopup="true"]',
    );

    menuButtons.forEach((button) => {
        // Toggle submenu on click
        button.addEventListener("click", (e) => {
            const isExpanded = button.getAttribute("aria-expanded") === "true";

            // Close all other submenus
            menuButtons.forEach((btn) => {
                if (btn !== button) {
                    btn.setAttribute("aria-expanded", "false");
                }
            });

            // Toggle current submenu
            button.setAttribute("aria-expanded", (!isExpanded).toString());
        });

        // Enhanced keyboard navigation
        button.addEventListener("keydown", (e) => {
            const submenu = button.nextElementSibling;
            const firstLink = submenu?.querySelector("a");

            switch (e.key) {
                case "ArrowDown":
                    e.preventDefault();
                    button.setAttribute("aria-expanded", "true");
                    firstLink?.focus();
                    break;

                case "Escape":
                    button.setAttribute("aria-expanded", "false");
                    button.focus();
                    break;
            }
        });

        // Arrow key navigation within submenu
        const submenu = button.nextElementSibling;
        if (submenu) {
            const submenuLinks = submenu.querySelectorAll("a");
            submenuLinks.forEach((link, index) => {
                link.addEventListener("keydown", (e) => {
                    switch (e.key) {
                        case "ArrowDown":
                            e.preventDefault();
                            const nextLink =
                                submenuLinks[index + 1] || submenuLinks[0];
                            nextLink.focus();
                            break;

                        case "ArrowUp":
                            e.preventDefault();
                            if (index === 0) {
                                button.focus();
                                button.setAttribute("aria-expanded", "false");
                            } else {
                                submenuLinks[index - 1].focus();
                            }
                            break;

                        case "Escape":
                            e.preventDefault();
                            button.setAttribute("aria-expanded", "false");
                            button.focus();
                            break;
                    }
                });
            });
        }
    });

    // Close submenus when clicking outside
    document.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (!target.closest(".has-submenu")) {
            menuButtons.forEach((button) => {
                button.setAttribute("aria-expanded", "false");
            });
        }
    });

    // Allow closing submenu when tabbing away
    const allMenuLinks = document.querySelectorAll(".nav-links a");
    allMenuLinks.forEach((link) => {
        link.addEventListener("blur", () => {
            setTimeout(() => {
                const parentItem = (link as HTMLElement).closest(
                    ".has-submenu",
                );
                const submenu = parentItem?.querySelector(".submenu");

                if (
                    submenu &&
                    !submenu.contains(document.activeElement) &&
                    !parentItem?.contains(document.activeElement)
                ) {
                    const parentButton = parentItem?.querySelector(
                        ".nav-button[aria-haspopup]",
                    );
                    if (parentButton) {
                        parentButton.setAttribute("aria-expanded", "false");
                    }
                }
            }, 100);
        });
    });
</script>