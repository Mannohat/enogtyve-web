---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    description?: string;
    lang?: "da" | "en";
}

const {
    title,
    description = "Enogtyve - Bitcoin og Penge Historie",
    lang = "da",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title} | Enogtyve</title>
    </head>
    <body>
        <Header lang={lang} />

        <main>
            <slot />
        </main>

        <Footer lang={lang} />
    </body>
</html>

<style>
   main {
    min-height: 70vh;
    padding: var(--space-sm) 0;
}
    }
</style>